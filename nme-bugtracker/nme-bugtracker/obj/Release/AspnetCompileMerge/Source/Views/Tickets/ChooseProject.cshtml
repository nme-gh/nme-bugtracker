
@{
    ViewBag.Title = "Choose Project";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Choose Project</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm("CreateTicket", "Tickets", FormMethod.Get))
        {
            @*@Html.AntiForgeryToken()*@

            <div class="form-horizontal">
                <h4>Choose Project</h4>
                <h5>Please select the project that the new ticket will belong to.</h5>
                <hr />
                @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.DropDownList("ProjectId", null, "Select the project", htmlAttributes: new { @class = "form-control" })
                        @*@Html.DropDownList("ProjectId", null, "Select the project", htmlAttributes: new { @class = "form-control" })*@
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Choose Project" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
