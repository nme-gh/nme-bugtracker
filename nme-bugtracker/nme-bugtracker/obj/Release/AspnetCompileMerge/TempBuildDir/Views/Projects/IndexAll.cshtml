@model IEnumerable<nme_bugtracker.Models.Project >

@{
    ViewBag.Title = "AllProjects";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>All Projects</title>
</head>
<body>
    <h4>All Projects</h4>
    <p>
        @Html.ActionLink("Create New Project", "Create", null, htmlAttributes: new { @style = "text-transform:capitalize; font-size: 20px; font-weight: bold;" }) 
        @*@Html.ActionLink("Assign Users to a Project", "AssignProjects") | NME: Old/Primitive Way of Implementation*@
        @*@Html.ActionLink("Add Users to a Project", "AddUsers") |
        @Html.ActionLink("Add Users to a Role", "AssignUsersRole") |
        @Html.ActionLink("Remove Users from a Role", "UnassignUsersRole")*@
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    @Html.ActionLink("Assign Users", "AddUserToProject", new { projectId = item.Id }) <span> | </span>
                    @Html.ActionLink("Unassign Users", "RemoveUserFromProject", new { projectId = item.Id }) <span> | </span>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) <span> | </span>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span> | </span>
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
                @*<td>
                    <div class="row">
                        <div class="col-md-2">
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </div>
                        <div class="col-md-10">
                            <strong>Admin Actions</strong>
                            <br />
                            @Html.ActionLink("Assign Users", "AddUserToProject", new { projectId = item.Id }) <span> | </span>
                            @Html.ActionLink("Unassign Users", "RemoveUserFromProject", new { projectId = item.Id }) 
                            <br />
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span> | </span>
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </div>
                    </div>
                </td>*@
            </tr>
        }

    </table>
</body>
</html>
