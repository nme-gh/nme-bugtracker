@model IEnumerable<nme_bugtracker.Models.Project>

@{
    ViewBag.Title = "MyProjects";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>My Projects</title>
</head>
<body>
    <h4>My Projects</h4>
    <p>
        @*@Html.ActionLink("Create a New Project", "Create") |*@ 
        @*@Html.ActionLink("Assign Users to a Project", "AssignProjects") | NME: Old/Primitive Way of Implementation*@ 
        @*@Html.ActionLink("Add Users to a Project", "AddUsers") |
        @Html.ActionLink("Add Users to a Role", "AssignUsersRole") |
        @Html.ActionLink("Remove Users from a Role", "UnassignUsersRole")*@
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.CreatedById)
            </th>*@
            <th>Actions</th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.CreatedBy.UserNameDisplayName)
            </td>*@
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) 
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
